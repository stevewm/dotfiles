[general]
live_config_reload = true
import = [
    "~/.config/alacritty/themes/alabaster_dark.toml"
]

[font]
size = 16.0
normal = { family = "CaskaydiaCove Nerd Font Mono", style = "Regular" }
bold = { family = "CaskaydiaCove Nerd Font Mono", style = "Bold" }
italic = { family = "CaskaydiaCove Nerd Font Mono", style = "Light" }
bold_italic = { family = "CaskaydiaCove Nerd Font Mono", style = "Bold" }

[env]
TERM = "xterm-256color"

[selection]
save_to_clipboard = true
